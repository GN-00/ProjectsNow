        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Printing"
        BorderBrush="DimGray"
        BorderThickness="1"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="CanMinimize"
        FontFamily="Times New Roman"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800">
