                        <TextBox Text="{Binding newPanelData.InternalLabelFixeing}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center"/>
                        <Label Content="" Width="50" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.InternalLabelLanguage}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center"/>
                        <Label Content="" Width="20" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>

                    <StackPanel Height="45" Orientation="Horizontal" Margin="40,0,0,0">
                        <Label Content="Equipment Labels " Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.EquipmentLabelType}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center"/>
                        <Label Content="" Width="50" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.EquipmentLabelFixeing}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center"/>
                        <Label Content="" Width="50" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.EquipmentLabelLanguage}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center"/>
                        <Label Content="" Width="20" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>

                </StackPanel>
            </TabItem>

            <TabItem Height="42">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                        <TextBlock x:Name="TB" Text="Climate" Style="{StaticResource TabStyle}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Climatic Conditions "
                               FontSize="32"
                               FontWeight="Light"
                               FontStyle="Italic"
                               FontFamily="Times New Roman"
                               Foreground="#FF9211E8"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Margin="20,20,0,0">
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Type of Climate " Width="220" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.ClimateType}" Width="250" Style="{StaticResource InputStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Type of Atmosphere " Width="220" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.AtmosphereType}" Width="250" Style="{StaticResource InputStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Pollution Risk " Width="220" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.PollutionRisks}" Width="250" Style="{StaticResource InputStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Ambient Temperature " Width="220" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.AmbientTemperature }" Width="100" Style="{StaticResource InputStyle}" HorizontalContentAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown" />
                        <Label Content="C˚" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Relative Humidity " Width="220" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.RelativeHumidity}" Width="100" Style="{StaticResource InputStyle}" HorizontalContentAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"  />
                        <Label Content="%" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Altitude (Above Sea Level)" Width="220" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.SeaLevel}" Width="100" Style="{StaticResource InputStyle}" HorizontalContentAlignment="Center" PreviewKeyDown="DoubleOnly_PreviewKeyDown"  />
                        <Label Content="M" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>


                </StackPanel>
            </TabItem>

            <TabItem Height="42">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                        <TextBlock x:Name="TB" Text="Particular Note" Style="{StaticResource TabStyle}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>

                <StackPanel Orientation="Vertical">

                    <TextBlock Text="Particular Note "
                               FontSize="32"
                               FontWeight="Light"
                               FontStyle="Italic"
                               FontFamily="Times New Roman"
                               Foreground="#FF9211E8"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Margin="20,20,0,0">
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                        <Label Content="Apparatus Defind " Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.ApparatusDefind}" Width="100" Style="{StaticResource InputStyle}" HorizontalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                        <Label Content="Weight " Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newPanelData.Weight}" Width="100" Style="{StaticResource InputStyle}" HorizontalContentAlignment="Center" />
                        <Label Content="kg" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>

                    <StackPanel Background="DarkGray" HorizontalAlignment="Left" Orientation="Horizontal" Margin="30,15,0,0">
                        <Label Content="Drawing: " Width="250" Style="{StaticResource LabelStyle}" Foreground="White" HorizontalContentAlignment="Left"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="30,0,0,0">
                        <CheckBox IsChecked="{Binding newPanelData.ForInformation}" Width="50" Style="{StaticResource CheckBoxStyle}"/>
                        <Label Content="For Information " Width="200" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Background="#FFF1F1F1" HorizontalAlignment="Left" Orientation="Horizontal" Margin="30,0,0,0">
                        <CheckBox IsChecked="{Binding newPanelData.ForProduction}" Width="50" Style="{StaticResource CheckBoxStyle}"/>
                        <Label Content="For Approval " Width="200" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="30,0,0,0">
                        <CheckBox IsChecked="{Binding newPanelData.ForApproval}" Width="50" Style="{StaticResource CheckBoxStyle}"/>
                        <Label Content="For Production " Width="200" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Background="#FFF1F1F1" HorizontalAlignment="Left" Orientation="Horizontal" Margin="30,0,0,0">
                        <CheckBox IsChecked="{Binding newPanelData.AsManufactured}" Width="50" Style="{StaticResource CheckBoxStyle}"/>
                        <Label Content="As Manufactured" Width="200" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                        <Label Content="Remarks " Width="120" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="35,0,0,0">
                        <TextBox Text="{Binding newPanelData.Remarks}" Width="300" Style="{StaticResource InputStyle}" MaxHeight="110" MinHeight="30" TextWrapping="Wrap"/>
                    </StackPanel>

                </StackPanel>

            </TabItem>

        </TabControl>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,20,10">

            <Button Height="35" 
                    Width="100"
                    Margin="5,0"
                    Click="Print_Click">

                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Gray"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Content" Value="Print"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontFamily" Value="Times New Roman"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="Gray" Margin="0,0,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="ButtonImage" Margin="10,5,5,5" Source="/Images/Icons/Printer.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="Save"
                    Height="35" 
                    Width="100"
                    Margin="5,0"
                    Click="Save_Click">

                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Gray"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Content" Value="Save"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontFamily" Value="Times New Roman"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="Gray" Margin="0,0,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="ButtonImage" Margin="10,5,5,5" Source="/Images/Icons/Save.png" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0">

                                            </ContentPresenter>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>

                </Button.Resources>
            </Button>

            <Button x:Name="Cancel"
                    Height="35" 
                    Width="100"
                    Margin="5,0"
                    Click="Cancel_Click">

                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="DarkRed"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Content" Value="Cancel"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontFamily" Value="Times New Roman"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="Gray" Margin="0,0,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="ButtonImage" Margin="5" Source="/Images/Icons/Error.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">

                                            </ContentPresenter>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>

                </Button.Resources>
            </Button>

        </StackPanel>

        <Grid x:Name="LoadingControl" Background="Black" Opacity="0.75" Visibility="Collapsed" Panel.ZIndex="10000"/>

    </Grid>
</Window>
