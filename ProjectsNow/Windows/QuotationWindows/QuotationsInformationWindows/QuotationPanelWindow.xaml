<Window x:Class="ProjectsNow.Windows.QuotationWindows.QuotationsInformationWindows.QuotationPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        BorderBrush="DimGray"
        BorderThickness="1"
        Title="Panel"
        WindowStyle="None"
        WindowState="Normal"
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded"
        FontFamily="Times New Roman"
        WindowStartupLocation="CenterScreen"
        Height="580"
        Width="1020">
    <Window.Resources>
        <Style x:Key="TabStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyle" BasedOn="{StaticResource TextBoxFlatStyle}" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputComboBoxStyle" BasedOn="{StaticResource ComboBoxFlatStyle}" TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputStyleDatePicker" BasedOn="{StaticResource DatePickerFlatStyle}" TargetType="{x:Type DatePicker}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <Style x:Key="CheckBoxStyle" BasedOn="{StaticResource CheckBoxFlatStyle}" TargetType="{x:Type CheckBox}">
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FFF1F1F1">

        <Image Width="80"
               Height="80"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Panel.ZIndex="1000"
               Source="/Images/Icons/PN.png"
               RenderOptions.BitmapScalingMode="HighQuality" 
               Margin="40,5,0,0">
        </Image>

        <Grid Height="50" Background="#FFF1F1F1" MouseDown="Grid_MouseDown" VerticalAlignment="Top" Margin="0,0,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">

            <Button x:Name="Minimize"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0"
                    Height="20"
                    Width="30"
                    Click="Minimize_Click" >

                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#FFF1F1F1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="0" Background="{TemplateBinding Background}" BorderBrush="Gray" Margin="0,0,0,0">
                                        <Image Margin="4" Source="pack://application:,,,/Images/Icons/Minimize.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>

                </Button.Resources>
            </Button>

            <Button x:Name="CloseWindow"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Click="CloseWindow_Click"
                Height="20"
                Width="30" Margin="0">

                <Button.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="DarkRed"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="0" Background="{TemplateBinding Background}" BorderBrush="Gray" Margin="0">
                                        <Image Margin="5" Source="pack://application:,,,/Images/Icons/close.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>

                </Button.Resources>
            </Button>

        </StackPanel>


        <Grid Height="470" Background="#FFF1F1F1" VerticalAlignment="Top" Margin="136,50,0,0">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.3" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Grid.Effect>
        </Grid>

        <TabControl Height="470"
                    Background="White"
                    BorderThickness="0"
                    BorderBrush="Transparent"
                    TabStripPlacement="Left"
                    VerticalAlignment="Top"
                    Margin="5,50,0,0">

            <TabItem Header="TabItem" Height="40" Visibility="Hidden"/>

            <TabItem Height="42" Selector.IsSelected="True">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                        <TextBlock x:Name="TB" Text="General" Style="{StaticResource TabStyle}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>
                <StackPanel Orientation="Vertical">

                    <TextBlock Text="General Information" FontSize="32" FontStyle="Italic" Foreground="#FF9211E8" Margin="20" VerticalAlignment="Center" />

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <Label Content="Name " Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.PanelName}" CharacterCasing="Upper" MinWidth="270" MaxWidth="600" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                        <Label Content="Type " Style="{StaticResource LabelStyle}" Width="100"/>
                        <TextBox x:Name="PanelType" Text="{Binding newQPanelData.PanelType}" MinWidth="270" MaxWidth="600" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                        <Label Content="Qty " Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.PanelQty}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                        <Label Content="Profit " Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.PanelProfit}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                        <Label Content="% " Width="100" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                    </StackPanel>

                </StackPanel>

            </TabItem>

            <TabItem Height="42">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                        <TextBlock x:Name="TB" Text="Enclosure" Style="{StaticResource TabStyle}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Enclosure Information"
                                   FontSize="32"
                                   FontWeight="Light"
                                   FontStyle="Italic"
                                   FontFamily="Times New Roman"
                                   Foreground="#FF9211E8"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Margin="20,20,0,0">
                        </TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                            <Label Content="Type " Width="110" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="EnclosureType" Text="{Binding newQPanelData.EnclosureType}" Width="250" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Label Content="Height " Width="110" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureHeight}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                            <Label Content="cm " Width="35" Style="{StaticResource LabelStyle}"/>

                            <Label Content="Width " Width="80" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureWidth}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                            <Label Content="cm " Width="35" Style="{StaticResource LabelStyle}"/>

                            <Label Content="Depth " Width="80" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureDepth}" Width="100" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                            <Label Content="cm " Width="35" Style="{StaticResource LabelStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                            <Label Content="Metal Type " Width="110" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureMetalType}" Width="180" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                            <Label Content="Color " Width="120" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureColor}" Width="180" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                            <Label Content="IP " Width="110" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureIP}" Width="180" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                            <Label Content="Form " Width="120" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureForm}" Width="180" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                            <Label Content="Location" Width="110" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureLocation}" Width="180" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                            <Label Content="Instulation" Width="120" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureInstallation}" Width="180" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                            <Label Content="Functional " Width="110" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding newQPanelData.EnclosureFunctional}" Width="180" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                            <Label Content="Front Door " Width="120" Style="{StaticResource LabelStyle}" Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>


            </TabItem>

            <TabItem Height="42">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                        <TextBlock x:Name="TB" Text="Power &amp; Busbar" Style="{StaticResource TabStyle}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Power Supply"
                                   FontSize="32"
                                   FontWeight="Light"
                                   FontStyle="Italic"
                                   FontFamily="Times New Roman"
                                   Foreground="#FF9211E8"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Margin="20,20,0,0">
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Source" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.Source}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Icu" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.EnclosureHeight}" Width="200" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                        <Label Content="kA" Width="40" Style="{StaticResource LabelStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Frequency" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.Frequency}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Operation" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.PowerSupplyOperation}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Neuteral" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.EarthingSystem}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Direct Current" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.DirectCurrent}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <TextBlock Text="Busbar "
                                   FontSize="32"
                                   FontWeight="Light"
                                   FontStyle="Italic"
                                   FontFamily="Times New Roman"
                                   Foreground="#FF9211E8"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Margin="20,20,0,0">
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Busbar Material" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.Busbar}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Horizontal" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.BusbarHorizontal}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Vertical" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.BusbarVertical}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Neutral Size" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.NeutralSize}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Earth Size" Width="140" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.EarthSize}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                </StackPanel>

            </TabItem>

            <TabItem Height="42">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                        <TextBlock x:Name="TB" Text="Auxiliary" Style="{StaticResource TabStyle}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="Red"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Supply Of Auxiliary "
                                   FontSize="32"
                                   FontWeight="Light"
                                   FontStyle="Italic"
                                   FontFamily="Times New Roman"
                                   Foreground="#FF9211E8"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Margin="20,20,0,0">
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="10,25,0,0">
                        <Label Content="Signalling: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.SignallingVoltage}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.SignallingSource}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Control: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.ControlVoltage}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.ControlSource}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Sensors: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.SensorsVoltage}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.SensorsSource}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Lighting: Voltage" Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.LightingVoltage}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Origin" Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.LightingSource}" Width="200" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <TextBlock Text="Auxiliary Wiring"
                                   FontSize="32"
                                   FontWeight="Light"
                                   FontStyle="Italic"
                                   FontFamily="Times New Roman"
                                   Foreground="#FF9211E8"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Margin="20,20,0,0">
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Voltage: Section" Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.AuxiliaryVoltageSection}" Width="90" Style="{StaticResource InputStyle}" TextAlignment="Center" IsReadOnly="True"/>
                        <Label Content="mm²" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                        <Label Content="Color" Width="70" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.AuxiliaryVoltageColor}" Width="90" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Type" Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.AuxiliaryVoltageType}" Width="100" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,15,0,0">
                        <Label Content="Voltage: Section" Width="150" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.AuxiliaryCurrentSection}" Width="90" Style="{StaticResource InputStyle}"  TextAlignment="Center" IsReadOnly="True"/>
                        <Label Content="mm²" Width="50" Style="{StaticResource LabelStyle}" HorizontalContentAlignment="Left"/>
                        <Label Content="Color" Width="70" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.AuxiliaryCurrentColor}" Width="90" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                        <Label Content="Type" Width="100" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding newQPanelData.AuxiliaryCurrentType}" Width="100" Style="{StaticResource InputStyle}" IsReadOnly="True"/>
                    </StackPanel>

                </StackPanel>

            </TabItem>

            <TabItem Height="42">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                        <TextBlock x:Name="TB" Text="Instruments" Style="{StaticResource TabStyle}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="White"/>
                                            <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                            <Setter TargetName="Border" Property="Border.Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
