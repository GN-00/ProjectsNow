<UserControl x:Class="ProjectsNow.Printing.DeliveryForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             FontFamily="Calibri (Body)"
             Height="29.7cm" 
             Width="21cm">
    <Grid Margin="20,20,20,1.5cm">

        <StackPanel DataContext="{Binding DeliveryInfromation}" Margin="0,4cm,1.5cm,0" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Viewbox Width="4.5cm" HorizontalAlignment="Right" Margin="0,0,0,0.4cm">
                <TextBlock Text="DELIVERY NOTE" FontSize="26" TextDecorations="UnderLine" FontStretch="Expanded" Foreground="#4f81bd" FontWeight="Bold" />
            </Viewbox>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Date" FontSize="16" Width="3.4cm" VerticalAlignment="Center"/>
                <Border Width="4.5cm" Height="0.6cm" BorderBrush="Black" BorderThickness="1,1,1,0">
                    <TextBlock Text="{Binding Date, StringFormat='dd/MM/yyyy'}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Job Order No." FontSize="16" Width="3.4cm" VerticalAlignment="Center"/>
                <Border Width="4.5cm" Height="0.6cm" BorderBrush="Black" BorderThickness="1,1,1,0">
                    <TextBlock Text="{Binding JobOrderCode}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Delivery Note No." FontSize="16" Width="3.4cm" VerticalAlignment="Center"/>
                <Border Width="4.5cm" Height="0.6cm" BorderBrush="Black" BorderThickness="1,1,1,0">
                    <TextBlock Text="{Binding DeliveryNumber}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Shipment No." FontSize="16" Width="3.4cm" VerticalAlignment="Center"/>
                <Border Width="4.5cm" Height="0.6cm" BorderBrush="Black" BorderThickness="1,1,1,1">
                    <TextBlock Text="{Binding ShipmentNo}" FontSize="16" VerticalAlignment="Center" Margin="5,0"/>
                </Border>
            </StackPanel>

        </StackPanel>

        <StackPanel DataContext="{Binding DeliveryInfromation}" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2cm,9.5cm,0,0">
            <TextBlock Text="   SHIPPING / DELIVER TO " Background="#4f81bd" Foreground="White" Width="7.5cm" FontSize="16" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="M/s " Width="2.5cm" FontSize="16"/>
                <TextBlock Text=": " FontSize="16"/>
                <TextBlock Text="{Binding CustomerName}" FontSize="16"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Attention " Width="2.5cm" FontSize="16"/>
                <TextBlock Text=": " FontSize="16"/>
                <TextBlock Text="{Binding Attention}" FontSize="16"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Project Name " Width="2.5cm" FontSize="16"/>
                <TextBlock Text=": " FontSize="16"/>
                <TextBlock Text="{Binding ProjectName}" FontSize="16"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2cm,12cm,1.5cm,0">
            <TextBlock Text="DILEVER DETAILS " HorizontalAlignment="Left" Width="3.5cm" FontSize="16"/>
            <TextBlock Text="" HorizontalAlignment="Left" Width="3.5cm" FontSize="16"/>

            <Grid x:Name="DeliveryTable">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                    <RowDefinition Height="0.6cm"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6cm"/>
                    <ColumnDefinition Width="6cm"/>
                    <ColumnDefinition Width="1.9cm"/>
                    <ColumnDefinition Width="2.8cm"/>
                    <ColumnDefinition Width="2.3cm"/>
                    <ColumnDefinition Width="2.8cm"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" BorderThickness="1,1,1,1" BorderBrush="Black" Background="#4f81bd">
                    <TextBlock Text="#" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" BorderThickness="0,1,1,1" BorderBrush="Black" Background="#4f81bd">
                    <TextBlock Text="Description" Margin="10,0,0,0" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" BorderThickness="0,1,1,1" BorderBrush="Black" Background="#4f81bd">
                    <TextBlock Text="Ordered" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="3" BorderThickness="0,1,1,1" BorderBrush="Black" Background="#4f81bd">
                    <TextBlock Text="Previous" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="4" BorderThickness="0,1,1,1" BorderBrush="Black" Background="#4f81bd">
                    <TextBlock Text="Delivered" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="5" BorderThickness="0,1,1,1" BorderBrush="Black" Background="#4f81bd">
                    <TextBlock Text="Outstanding" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>


                <Border Grid.Row="1" Grid.Column="0" BorderThickness="1,0,1,1" BorderBrush="Black" Background="#4f81bd">
                    <TextBlock Text="{Binding PanelsData[0].PanelSN}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Text="{Binding PanelsData[0].PanelName}" Margin="10,0,0,0" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" />
                </Border>
                <Border Grid.Row="1" Grid.Column="2" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Text="{Binding PanelsData[0].PanelQty}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="3" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Text="{Binding PanelsData[0].PreviousQty}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="4" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Text="{Binding PanelsData[0].DeliveredQty}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="5" BorderThickness="0,0,1,1" BorderBrush="Black">
                    <TextBlock Text="{Binding PanelsData[0].Outstanding}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Border>

