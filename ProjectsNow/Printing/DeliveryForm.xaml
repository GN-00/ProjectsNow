            <TextBlock Text="Notice must be given us of any goods not received/shortage or damage immediately or with in" HorizontalAlignment="Left"  FontSize="16" Margin="0,0.5cm,0,0"/>
            <TextBlock Text="24 hours from the dispatch receiving date." HorizontalAlignment="Left"  FontSize="16"/>
            <TextBlock Text="Thank you for your business!" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,1cm,0,0" FontSize="16"/>
            <TextBlock Text="Should you have any enquires concerning this deliverynote, please contact on below given" HorizontalAlignment="Left" FontSize="16"/>
            <TextBlock Text="Information." HorizontalAlignment="Left" FontSize="16"/>

            <Grid Width="8cm" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5cm"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8cm"/>
                    <RowDefinition Height="0.8cm"/>
                    <RowDefinition Height="0.8cm"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Received by" HorizontalAlignment="Left" FontSize="16"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Signature" HorizontalAlignment="Left" FontSize="16"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Date" HorizontalAlignment="Left" FontSize="16"/>

                <TextBlock Grid.Row="0" Grid.Column="1" Text=":________________________" HorizontalAlignment="Center" FontSize="16"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text=":________________________" HorizontalAlignment="Center" FontSize="16"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text=":________________________" HorizontalAlignment="Center" FontSize="16"/>

